            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
            <!-- 此处设置字符集 -->
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- project 默认级别-->
    <logger name="com.sunvalley"/>

    <logger name="org.springframework.jdbc" level="ERROR"/>
    <!-- log jdbc-->
    <logger name="jdbc.sqltiming" level="ERROR"/>
    <!-- log detail configuration -->
    <logger name="org.acegisecurity" level="ERROR"/>

    <root level="${logLevel}">
        <appender-def ref="console"/>
        <appender-def ref="file-trace"/>
        <appender-def ref="file-debug"/>
        <appender-def ref="file-info"/>
        <appender-def ref="file-warn"/>
        <appender-def ref="file-error"/>
    </root>

</configuration>